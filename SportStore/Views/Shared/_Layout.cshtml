<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" href="~/css/style.css"/>
</head>

<body>
    <header>
        <div class="container">
            <div class="navbar bg-primary navbar-dark justify-content-center" role="navigation">
                <a class="navbar-brand" href="#">Магазин спортивных товаров</a>
            </div>
        </div>
    </header>
    <section>
        <div class="container p-0">
            <div class="row m-1 p-1">
                <div id="categories" class="col-lg-3">
                    @await Component.InvokeAsync("NavigationMenu")
                </div>
                <div class="col-lg-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>
</body>
</html>
